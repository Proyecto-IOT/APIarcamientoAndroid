<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Add_vehicle">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="55dp"
            android:paddingEnd="55dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/nom_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/osval"
                android:text="Nuevo vehiculo"
                android:textSize="22dp"
                android:layout_gravity="center_horizontal"
                android:lineSpacingExtra="2sp"
                />

            <!-- NOMBRE -->
            <TextView
                android:id="@+id/text_plate"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Placa"
                android:textSize="16sp"
                android:lineSpacingExtra="2sp"
                />

            <EditText
                android:id="@+id/plateField"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:hint="Longitud Minima 6, maximo 7"
                android:paddingEnd="8dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!-- APELLIDOS -->


            <!-- EMAIL -->
            <TextView
                android:id="@+id/text_brand"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Marca"
                android:layout_below="@id/plateField"
                android:textSize="16sp"
                android:lineSpacingExtra="2sp"
                />

            <EditText
                android:id="@+id/brandField"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!-- EMAIL -->
            <TextView
                android:id="@+id/text_model"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Modelo"
                android:layout_below="@id/brandField"
                android:textSize="16sp"
                android:lineSpacingExtra="2sp"
                />

            <EditText
                android:id="@+id/modelField"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!-- PASSWORD -->
            <TextView
                android:id="@+id/text_color"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_below="@id/modelField"
                android:text="Color"
                android:textSize="16sp"
                android:lineSpacingExtra="2sp"
                />

            <EditText
                android:id="@+id/colorField"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btn_add"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Agregar carro"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>